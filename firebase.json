{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "**/test-results/**",
            "**/tests/**",
            "**/specs/**",
            "**/playwright-report/**",
            "**/site/**",
            "package.json",
            "package-lock.json",
            "playwright.config.ts",
            "README.md",
            "docs/**",
            "scratch.md",
            "mkdocs.yml"
        ],
        "rewrites": [
            {
                "source": "/platform/**",
                "destination": "/platform/index.html"
            },
            {
                "source": "/club/**",
                "destination": "/club/index.html"
            }
        ]
    }
}